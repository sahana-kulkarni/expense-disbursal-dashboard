datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())

  expenses  Expense[]
  audits    ExpenseAudit[]
}

model Expense {
  id        String    @id @default(uuid())
  title     String
  amount    Float
  status    Status    @default(PENDING)
  createdAt DateTime  @default(now())

  userId    String
  user      User      @relation(fields: [userId], references: [id])

  audits    ExpenseAudit[]
}

model ExpenseAudit {
  id         String   @id @default(uuid())
  expenseId  String
  actorId    String
  fromStatus Status
  toStatus   Status
  reason     String?
  createdAt  DateTime @default(now())

  expense    Expense  @relation(fields: [expenseId], references: [id])
  actor      User     @relation(fields: [actorId], references: [id])

  @@index([expenseId])
  @@index([actorId])
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

enum Role {
  USER
  MANAGER
  ADMIN
}